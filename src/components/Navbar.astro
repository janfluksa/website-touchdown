---
import { SITE_TITLE } from '../consts';
---

<header>
	<div class="container">
		<nav class="navbar navbar-expand-lg pt-3">
			

				<a class="navbar-brand" href="/">
					<img src="/images/logo-touchdown.svg" alt="Company logo - Touchdown">
				</a>

				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarSupportedContent">

					<ul class="navbar-nav mx-auto mb-2 mb-lg-0 gap-42">
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="#consulting-services">Consulting</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#clients-sectors">Sectors</a>
						</li>	
						<li class="nav-item">
							<a class="nav-link" href="#our-team">Team</a>
						</li>	
					</ul>

					<ul class="navbar-nav">
						<li class="nav-item">
							<a href="#contact" class="btn btn-rounded btn-arrow-right" role="button" aria-label="Scroll down to Contact section">Contact us</a>
						</li>
					</ul>

				</div>
			
		</nav>
	</div>
</header>
<style>
	.navbar-toggler {
		border: none !important;
    	box-shadow: none;
	}
	.navbar-toggler:focus {
		border: none !important;
    	border: solid 1px #fafafa !important;
	}



	.gap-42 {
		gap: 1rem;
		font-size: 1rem;
		padding: 1.5rem 1rem;
	}

	.navbar-collapse {
		text-align: end;
	}


	@media screen and (min-width: 992px) { 

		.gap-42 {
			gap: 2.625rem;
			font-size: 1rem;
			padding: 0;
		} 

		.navbar-collapse {
			text-align: center;
		}

	}
</style>